
# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_size = 2
indent_style = space
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab